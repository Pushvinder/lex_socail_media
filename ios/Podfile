platform :ios, '14.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

# Add this pre_install hook to remove duplicate frameworks
pre_install do |installer|
  puts "üîß Removing duplicate aosl.xcframework before installation..."

  # Define which pods might contain duplicate frameworks
  duplicate_pods = ['Google-Mobile-Ads-SDK', 'AgoraRtcEngine_iOS', 'AgoraInfra_iOS']

  # Remove the duplicate framework from Google-Mobile-Ads-SDK
  # (We'll keep the one from Agora since it's likely the video SDK needs it)
  installer.sandbox.pod_dir.each_child do |pod_dir|
    pod_name = pod_dir.basename.to_s

    if duplicate_pods.include?(pod_name)
      # Look for aosl.xcframework in this pod
      framework_path = pod_dir + 'Frameworks/aosl.xcframework'
      framework_path2 = pod_dir + 'ios/aosl.xcframework'

      if framework_path.exist?
        puts "üóëÔ∏è  Removing duplicate aosl.xcframework from #{pod_name}"
        FileUtils.rm_rf(framework_path)
      end

      if framework_path2.exist?
        puts "üóëÔ∏è  Removing duplicate aosl.xcframework from #{pod_name}/ios"
        FileUtils.rm_rf(framework_path2)
      end
    end
  end
end

target 'Runner' do
  use_frameworks! :linkage => :static

  # Force static linkage to avoid conflicts
  pod 'Firebase/CoreOnly', '11.15.0'

  # Exclude duplicate framework from Google-Mobile-Ads-SDK
  pod 'Google-Mobile-Ads-SDK', '12.2.0', :modular_headers => false

  # For Agora - exclude the problematic framework if needed
  pod 'AgoraRtcEngine_iOS', '4.5.2', :modular_headers => false

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    target.build_configurations.each do |config|
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
    end
  end

  # Remove duplicate framework references after installation
  installer.pods_project.frameworks_group.children.each do |framework|
    if framework.display_name == 'aosl.xcframework' ||
       framework.display_name.include?('aosl')
      puts "üóëÔ∏è  Removing duplicate framework reference: #{framework.display_name}"
      framework.remove_from_project
    end
  end
end